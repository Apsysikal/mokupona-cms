{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string",
      "required": true
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "tags": {
      "type": "string"
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "signupDate": {
      "type": "datetime",
      "required": true
    },
    "slots": {
      "type": "integer",
      "min": 0,
      "required": true
    },
    "price": {
      "type": "integer",
      "min": 0,
      "required": true
    },
    "locationStreet": {
      "type": "string",
      "required": true
    },
    "locationCity": {
      "type": "string",
      "required": true
    },
    "cover": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "event_responses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::event-response.event-response",
      "mappedBy": "event"
    }
  }
}
